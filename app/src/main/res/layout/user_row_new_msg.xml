<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_marginTop="16dp"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:id="@+id/userNameTextViewNewMsg" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/newMessageImageView" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/newMessageImageView"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/newMessageImageView"
            android:layout_marginTop="16dp" android:fontFamily="@font/montserrat"/>
    <xyz.schwaab.avvylib.AvatarView
            app:avvy_border_color="@color/colorAccent"
            app:avvy_border_highlight_color="#ff5900"
            app:avvy_border_highlight_color_end="#bf15bc"
            app:avvy_border_thickness="1dp"
            app:avvy_border_thickness_highlight="2dp"
            app:avvy_distance_to_border="3dp"
            app:avvy_highlighted="true"
            app:avvy_loading_arches="5"
            app:avvy_loading_arches_degree_area="90"
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@drawable/googleg_disabled_color_18"
            android:id="@+id/newMessageImageView" android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>